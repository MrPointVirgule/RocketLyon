<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <ImageView
        android:id="@+id/ligne_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_white_48dp"
        android:padding="5dp" />

    <TextView
        android:id="@+id/ligne_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grange Blanche"
        android:textSize="17sp"
        android:padding="5dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ligne_icon"
        android:layout_toEndOf="@+id/ligne_icon" />

    <TextView
        android:id="@+id/ligne_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 min"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="10dp" />

</RelativeLayout>